<div class="ui three column centered grid">
  <% @users.each do |user| %>
  <% if user.id != current_user.id %>
    <div class="card column p4"> 
      <div class="card-block">
        <h4 class="card-title"><%= user.name %></h4>
        <p class="card-text"><%= user.email %></p>
          <% @x = Friendship.where(user_id: current_user.id).where(friend_id: user.id).first %>
         <% if @x %>
          <p class="card-text small"> has added <%= distance_of_time_in_words(Time.now,(@x.created_at)) %> ago </p>
          <%= link_to "remove", friendship_path(:id => @x.id), :method => :delete, class:"ui blue button" %>
        <% else %>
          <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %> 
</div>

<%= link_to "Friend list", friendships_path(id: current_user.id) %>