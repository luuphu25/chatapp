<% @users.each do |user| %>
  <% if user.id != current_user.id %>
    <div class="card col-lg-6"> 
      <div class="card-block">
        <h4 class="card-title"><%= user.name %></h4>
        <p class="card-text"><%= user.email %></p>
         <% if Friendship.where(user_id: current_user.id).where(friend_id: user.id).first %>
        <%= link_to "remove", root_path, class:"ui blue button" %>
        <% else %>
          <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %> 

<%= link_to "Friend list", friendships_path(id: current_user.id) %>